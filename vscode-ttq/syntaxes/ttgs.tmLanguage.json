{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "TTGS",
  "scopeName": "source.ttgs",
  "patterns": [
    { "include": "#comment" },
    { "include": "#dict-entry" },
    { "include": "#string" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comment": {
      "match": "--.*$",
      "name": "comment.line.double-dash.ttgs"
    },
    "string": {
      "begin": "\"",
      "end": "\"",
      "name": "string.quoted.double.ttgs",
      "patterns": [
        {
          "match": "\\\\.",
          "name": "constant.character.escape.ttgs"
        }
      ]
    },
    "dict-entry": {
      "begin": "(\"[^\"]*\")\\s*(:)",
      "beginCaptures": {
        "1": { "name": "support.type.property-name.ttgs" },
        "2": { "name": "punctuation.separator.colon.ttgs" }
      },
      "end": "(?=,|\\}|--)",
      "patterns": [
        { "include": "#comment" },
        { "include": "#color-value" },
        { "include": "#string" }
      ]
    },
    "color-value": {
      "match": "\"(#[0-9A-Fa-f]{3,8})\"",
      "name": "constant.other.color.ttgs"
    },
    "punctuation": {
      "patterns": [
        {
          "match": "[{}]",
          "name": "punctuation.section.braces.ttgs"
        },
        {
          "match": ",",
          "name": "punctuation.separator.comma.ttgs"
        },
        {
          "match": ":",
          "name": "punctuation.separator.colon.ttgs"
        }
      ]
    }
  }
}
