{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "TTG",
  "scopeName": "source.ttg",
  "patterns": [
    { "include": "#comment" },
    { "include": "#config-statement" },
    { "include": "#style-statement" },
    { "include": "#execute-statement" },
    { "include": "#metadata-keyword" },
    { "include": "#sort-clause" },
    { "include": "#output-redirect" },
    { "include": "#string" },
    { "include": "#predicate-block" },
    { "include": "#style-dict" },
    { "include": "#constant" },
    { "include": "#number" },
    { "include": "#join-function" },
    { "include": "#axis-path" },
    { "include": "#operator" },
    { "include": "#identifier" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comment": {
      "match": "--.*$",
      "name": "comment.line.double-dash.ttg"
    },
    "string": {
      "begin": "\"",
      "end": "\"",
      "name": "string.quoted.double.ttg",
      "patterns": [
        {
          "match": "\\\\.",
          "name": "constant.character.escape.ttg"
        }
      ]
    },
    "number": {
      "match": "\\b\\d+\\b",
      "name": "constant.numeric.integer.ttg"
    },
    "constant": {
      "match": "\\b(true|false|inf|infinity)\\b",
      "name": "constant.language.ttg"
    },
    "config-statement": {
      "match": "\\b(config)\\s+(\"[^\"]*\")",
      "captures": {
        "1": { "name": "keyword.control.ttg" },
        "2": { "name": "string.quoted.double.ttg" }
      }
    },
    "style-statement": {
      "match": "\\b(style)\\s+(\"[^\"]*\")",
      "captures": {
        "1": { "name": "keyword.control.ttg" },
        "2": { "name": "string.quoted.double.ttg" }
      }
    },
    "execute-statement": {
      "match": "\\b(execute)\\s+(\"[^\"]*\")",
      "captures": {
        "1": { "name": "keyword.control.ttg" },
        "2": { "name": "string.quoted.double.ttg" }
      }
    },
    "metadata-keyword": {
      "match": "\\b(metadata)\\b",
      "name": "keyword.other.ttg"
    },
    "sort-clause": {
      "match": "\\b(sort)\\s+(by)\\s+((?:source|label|target)(?:\\s*,\\s*(?:source|label|target))*)",
      "captures": {
        "1": { "name": "keyword.control.ttg" },
        "2": { "name": "keyword.control.ttg" },
        "3": { "name": "variable.parameter.ttg" }
      }
    },
    "output-redirect": {
      "match": "(>)\\s*(\"[^\"]*\")",
      "captures": {
        "1": { "name": "keyword.operator.redirect.ttg" },
        "2": { "name": "string.quoted.double.ttg" }
      }
    },
    "join-function": {
      "match": "\\b(join)\\s*(?=\\()",
      "name": "support.function.ttg"
    },
    "axis-path": {
      "match": "(?<=[+=/{,\\s-])\\s*(\\.)([a-zA-Z_][a-zA-Z0-9_]*(?:\\.[a-zA-Z_][a-zA-Z0-9_]*)*)",
      "captures": {
        "1": { "name": "punctuation.accessor.dot.ttg" },
        "2": { "name": "entity.name.function.axis.ttg" }
      }
    },
    "predicate-block": {
      "begin": "(?<=[a-zA-Z0-9_])\\{",
      "end": "\\}",
      "name": "meta.predicate.ttg",
      "patterns": [
        { "include": "#comment" },
        { "include": "#predicate-entry" }
      ]
    },
    "predicate-entry": {
      "begin": "([a-zA-Z_][a-zA-Z0-9_]*)\\s*(=)",
      "beginCaptures": {
        "1": { "name": "variable.parameter.predicate-key.ttg" },
        "2": { "name": "keyword.operator.assignment.ttg" }
      },
      "end": "(?=[,}])",
      "patterns": [
        { "include": "#predicate-value" }
      ]
    },
    "predicate-value": {
      "patterns": [
        { "include": "#string" },
        { "include": "#constant" },
        { "include": "#number" },
        {
          "match": "\\b(join)\\s*(?=\\()",
          "name": "support.function.ttg"
        },
        {
          "match": "(\\.)([a-zA-Z_][a-zA-Z0-9_]*(?:\\.[a-zA-Z_][a-zA-Z0-9_]*)*)",
          "captures": {
            "1": { "name": "punctuation.accessor.dot.ttg" },
            "2": { "name": "entity.name.function.axis.ttg" }
          }
        },
        {
          "match": "!",
          "name": "keyword.operator.negation.ttg"
        },
        {
          "match": "\\|",
          "name": "keyword.operator.or.ttg"
        },
        {
          "match": "[()]",
          "name": "punctuation.section.parens.ttg"
        },
        {
          "match": ",",
          "name": "punctuation.separator.comma.ttg"
        },
        {
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b",
          "name": "entity.name.type.ttg"
        }
      ]
    },
    "style-dict": {
      "begin": "(?<=style\\s*)\\{|(?<=\\})\\s*\\{",
      "end": "\\}",
      "name": "meta.style-dict.ttg",
      "patterns": [
        { "include": "#comment" },
        { "include": "#string" },
        {
          "match": ":",
          "name": "punctuation.separator.colon.ttg"
        },
        {
          "match": ",",
          "name": "punctuation.separator.comma.ttg"
        }
      ]
    },
    "operator": {
      "patterns": [
        {
          "match": "[+/\\-]",
          "name": "keyword.operator.chain.ttg"
        },
        {
          "match": "\\|",
          "name": "keyword.operator.union.ttg"
        },
        {
          "match": "&",
          "name": "keyword.operator.intersect.ttg"
        },
        {
          "match": ">",
          "name": "keyword.operator.redirect.ttg"
        }
      ]
    },
    "identifier": {
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b",
      "name": "variable.other.selector.ttg"
    },
    "punctuation": {
      "patterns": [
        {
          "match": "[{}]",
          "name": "punctuation.section.braces.ttg"
        },
        {
          "match": "[()]",
          "name": "punctuation.section.parens.ttg"
        },
        {
          "match": ",",
          "name": "punctuation.separator.comma.ttg"
        },
        {
          "match": "\\.",
          "name": "punctuation.accessor.dot.ttg"
        },
        {
          "match": ";",
          "name": "punctuation.separator.semicolon.ttg"
        }
      ]
    }
  }
}
