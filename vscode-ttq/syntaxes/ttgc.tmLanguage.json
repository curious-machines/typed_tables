{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "TTGC",
  "scopeName": "source.ttgc",
  "patterns": [
    { "include": "#comment" },
    { "include": "#shortcut-block" },
    { "include": "#section-keyword" },
    { "include": "#string" },
    { "include": "#constant" },
    { "include": "#number" },
    { "include": "#dotted-name" },
    { "include": "#schema-type" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comment": {
      "match": "--.*$",
      "name": "comment.line.double-dash.ttgc"
    },
    "string": {
      "begin": "\"",
      "end": "\"",
      "name": "string.quoted.double.ttgc",
      "patterns": [
        {
          "match": "\\\\.",
          "name": "constant.character.escape.ttgc"
        }
      ]
    },
    "number": {
      "match": "\\b\\d+\\b",
      "name": "constant.numeric.integer.ttgc"
    },
    "constant": {
      "match": "\\b(true|false|default|inf)\\b",
      "name": "constant.language.ttgc"
    },
    "section-keyword": {
      "match": "\\b(selector|group|axis|reverse|axis_group|identity|shortcut)\\b",
      "name": "keyword.other.section.ttgc"
    },
    "shortcut-block": {
      "begin": "\\b(shortcut)\\s*\\{",
      "beginCaptures": {
        "1": { "name": "keyword.other.section.ttgc" }
      },
      "end": "\\}",
      "name": "meta.block.shortcut.ttgc",
      "patterns": [
        { "include": "#comment" },
        { "include": "#shortcut-entry" }
      ]
    },
    "shortcut-entry": {
      "begin": "(\"[^\"]*\")\\s*(:)",
      "beginCaptures": {
        "1": { "name": "string.quoted.double.ttgc" },
        "2": { "name": "punctuation.separator.colon.ttgc" }
      },
      "end": "(?=\\n|--|})",
      "name": "meta.shortcut-entry.ttgc",
      "patterns": [
        { "include": "#shortcut-value" }
      ]
    },
    "shortcut-value": {
      "patterns": [
        { "include": "#comment" },
        { "include": "#string" },
        { "include": "#number" },
        {
          "match": "\\b(true|false|inf)\\b",
          "name": "constant.language.ttgc"
        },
        {
          "match": "[+/\\-|&]",
          "name": "keyword.operator.ttgc"
        },
        {
          "match": "\\.",
          "name": "punctuation.accessor.dot.ttgc"
        },
        {
          "match": "[{}\\[\\]()]",
          "name": "punctuation.section.ttgc"
        },
        {
          "match": "[,=]",
          "name": "punctuation.separator.ttgc"
        },
        {
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b",
          "name": "variable.other.ttgc"
        }
      ]
    },
    "dotted-name": {
      "match": "\\b([a-z_][a-zA-Z0-9_]*)(\\.)(\\*|[a-z_][a-zA-Z0-9_]*)\\b",
      "captures": {
        "1": { "name": "variable.other.selector.ttgc" },
        "2": { "name": "punctuation.accessor.dot.ttgc" },
        "3": { "name": "variable.other.field.ttgc" }
      }
    },
    "schema-type": {
      "match": "\\b[A-Z][a-zA-Z0-9_]*\\b",
      "name": "entity.name.type.ttgc"
    },
    "punctuation": {
      "patterns": [
        {
          "match": "[{}]",
          "name": "punctuation.section.braces.ttgc"
        },
        {
          "match": "[\\[\\]]",
          "name": "punctuation.section.brackets.ttgc"
        },
        {
          "match": ",",
          "name": "punctuation.separator.comma.ttgc"
        },
        {
          "match": ":",
          "name": "punctuation.separator.colon.ttgc"
        },
        {
          "match": "\\.",
          "name": "punctuation.accessor.dot.ttgc"
        }
      ]
    }
  }
}
